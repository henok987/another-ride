# User Service Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/user-service

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External Service Configuration (for integration with ride service)
RIDE_SERVICE_URL=http://localhost:4000
RIDE_SERVICE_API_KEY=your-ride-service-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info